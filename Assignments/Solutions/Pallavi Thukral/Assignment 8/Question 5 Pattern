https://practice.geeksforgeeks.org/problems/triangle-shrinking-downwards0459/1#


class Solution {
 public:
    string triDownwards(string S) {
        // code here
        string result;
        for(int i=0;i<S.size();i++)
        {
            for(int j=0;j<S.size();j++)\
            {
                if(i>j)
                result+=".";
                
                else
                result+=S[j];
            }
        }
        return result;
    }
};
