#include <iostream>
using namespace std;

int main() {

    int n;
    cout<<"Enter any number : ";
    cin >> n;

    for ( int i = 0; i < n; i++ ) {
        for ( int j = 0; j < i + 1; j++ )
            cout <<"  ";

        for ( int k = i; k < n; k++ )
            cout<<" *  ";
        for ( int m = 5 - i - 1; m < 0; m-- )
            cout<<" *  ";

        cout<<endl;
    }

    return 0;
}

