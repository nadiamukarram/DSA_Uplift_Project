#include<iostream>
using namespace std;
int main(){
    int n,count=0;
    cin>>n;
    int a[n];
    cout<<"enter a binary-non increasing array: "<<endl;
    for(int i=0;i<n;i++)
    cin>>a[i];
    for(int i=0;i<n;i++){
        count++;
        if(a[i]==0)
        break;
    }
    cout<<count;
    return 0;
}
