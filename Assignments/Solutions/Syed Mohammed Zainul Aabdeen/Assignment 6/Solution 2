#include <iostream>
using namespace std;
int main() {
    int n,x,flag=0;
    cin>>n;
    int a[n];
    cout<<"enter a sorted array: ";
    for(int i=0;i<n;i++)
    cin>>a[i];
    cout<<"enter no.to find: ";
    cin>>x;
    int start=0,end=n-1;
    while(end>=start){
        int mid=(start+end+1)/2;
        if(a[mid]==x && a[mid]!=a[mid-1]){
             cout<<"the no.is present at "<<mid;
             flag=1;
             break;
        }
        else if(a[mid]<=x)
        start=mid+1;
        else
        end=mid-1;
    }
    if(flag==0)
    cout<<"the element is not present";
    return 0;
}
