/******************************************************************************

Question 4

Given an array arr[] of N integers. Find the contiguous sub-array with maximum sum
Hint: Kadaneâ€™s Algorithm

I/P:
8
-2 -3 4 -1 -2 1 5 -3

O/P:
7



*******************************************************************************/
#include <iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    int array[n],i;
    for(i=0;i<n;i++)
        cin>>array[i];
    int max_sum=0,max_ending=0;
    for(i=0;i<n;i++){
        max_ending+=array[i];
        if(max_sum < max_ending)
            max_sum=max_ending;
        if(max_ending<0)
            max_ending=0;
    }
    cout<<"Maximum sum of contiguous sub-array for the given array : "<<max_sum;
    return 0;
}
