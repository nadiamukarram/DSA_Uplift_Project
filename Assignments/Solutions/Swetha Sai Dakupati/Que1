//printing a pattern in slanting
//i/p:5
//o/p:
/*
        * * * * *
      * * * * * 
    * * * * * 
  * * * * *
* * * * *
*/

#include <iostream>
using namespace std;

int
main ()
{
  int n;
  cin >> n;
  int i, j, k;
  for (i = 0; i < n; i++)
    {
      for (j = n - 1; j > i; j--)
	{
	  cout << " ";
	}
      for (k = 0; k < n; k++)
	{
	  cout << '*' << " ";
	}
      cout << '\n';
    }
  return 0;
}

