/******************************************************************************

Question 2
Given two i/p signed integers, write function that returns true if the signs of given integers are different, otherwise false

I/P:
-4 +5

O/P:
True

*******************************************************************************/

//Without using arithmetic operator

#include <iostream>
using namespace std;

bool OppositeSigns(int x,int y){
    return (x^y)<0;
}
int main()
{
    int x,y;
    cin>>x>>y;
    if(OppositeSigns(x,y)==true) cout<<"True! signs are opposite.";
    else cout<<"False! signs are same.";
    return 0;
}
