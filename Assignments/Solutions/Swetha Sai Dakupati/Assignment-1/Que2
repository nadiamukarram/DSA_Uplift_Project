/******************************************************************************

Question 2.

* * * * *  * * * * *
* * * *      * * * *
* * *          * * *
* *              * *
*                  *
*                  *
* *              * *
* * *          * * *
* * * *      * * * *
* * * * *  * * * * *
  
  
  
*******************************************************************************/
#include <iostream>
using namespace std;

int
main ()
{
  int n, i, j, k;
  cin >> n;
  for (i = n; i > 0; i--)
    {
      for (j = 0; j < i; j++)
	{
	  cout << '*';
	}
      for (k = n; k > i; k--)
	{
	  cout << " ";
	}
      for (k = n; k > i; k--)
	{
	  cout << " ";
	}
      for (j = 0; j < i; j++)
	{
	  cout << '*';
	}
      cout << endl;
    }
  for (i = 0; i < n; i++)
    {
      for (j = 0; j <= i; j++)
	{
	  cout << '*';
	}
      for (k = n - 1; k > i; k--)
	{
	  cout << " ";
	}
      for (k = n - 1; k > i; k--)
	{
	  cout << " ";
	}
      for (j = 0; j <= i; j++)
	{
	  cout << '*';
	}
      cout << endl;
    }
  return 0;
}

