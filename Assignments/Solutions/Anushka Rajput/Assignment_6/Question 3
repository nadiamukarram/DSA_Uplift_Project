/*  Question 3:Given a sorted array of size N and an integer K. Check if K is present in the array or not.
Example 1:
Input:
N = 5, K = 6
arr[] = {1,2,3,4,6}
Output: 1   */

#include<iostream>
using namespace std;

int check(int arr[], int n, int k)
{
    for(int i=0; i<n; i++)
    {
        if(arr[i] == k)
            return true;
    }
    return false;
}

int main()
{
    int n=5, k=6;
    int arr[] = {1,2,3,4,6};

    cout<<check(arr, n, k);
}
